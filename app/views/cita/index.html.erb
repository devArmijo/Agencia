<p id="notice"><%= notice %></p>

<h1>Cita</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cita.each do |citum| %>
      <tr>
        <td><%= citum.nombre %></td>
        <td><%= citum.email %></td>
        <td><%= citum.fecha %></td>
        <td><%= link_to 'Mostrar', citum %></td>
        <td><%= link_to 'Editar', edit_citum_path(citum) %></td>
        <td><%= link_to 'Eliminar', citum, method: :delete, data: { confirm: 'Seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva cita', new_citum_path %>
